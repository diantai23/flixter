<br />

<div class='booyah-box col-10 offset-1'>
  <h1 class='text-center course-title'>Learn Something New Today!</h1>
  <hr />

  <% @courses.each do|course| %>
    <h2 class='text-center index-course-title'>
      <a><%= link_to course.title, course_path(course) %></a>
      <br />
      <%= image_tag course.image, class: 'img-fluid' %>
    </h2>
    <br />
    <div class='row'>
      <div class ='col-sm-8 col-12'>
        <%= course.description %>
      </div>
      <div class='col-sm-4 col-12 text-center'>
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-info btn-large' %>
      </div>
    </div>
    <br class='clr' />
  <% end %>
</div>
